<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragementMenu.FactureFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/add_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:padding="16dp"
            android:textStyle="bold"
            android:text="Add a bill"/>
        <TextView
            android:id="@+id/showUplads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/add_bill"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFF00"
            android:clickable="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:text="Show Bills"/>
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imagebrowse"
            android:layout_width="164dp"
            android:layout_height="132dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.262"
            app:srcCompat="@drawable/browse" />

        <ImageView
            android:id="@+id/imageupload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.841"
            app:srcCompat="@drawable/upload" />

        <EditText
            android:id="@+id/filetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="178dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="25sp"
            android:textStyle="bold"
            android:hint="File Title"
            app:layout_constraintBottom_toTopOf="@+id/imageupload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagebrowse" />

        <ImageView
            android:id="@+id/filelogo"
            android:layout_width="152dp"
            android:layout_height="162dp"
            android:layout_marginTop="142dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/filetitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/file" />

        <ImageView
            android:id="@+id/cancelfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="96dp"
            android:layout_marginRight="107dp"
            android:layout_marginEnd="107dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/filelogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cancel" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>